<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "Email or username", class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Enter your username or your Email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"form-label mt-3" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Enter your password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mt-3">
    <%= f.submit "Log in", class:"btn btn-outline-success" %>
  </div>
<% end %>